<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:background="@drawable/start_quiz"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_img"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_rounded"
        android:onClick="selectProfileImg"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/user_default_icon" />

    <EditText
        android:id="@+id/layout_register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:paddingTop="20dp"
        android:paddingEnd="4dp" />

    <EditText
        android:id="@+id/layout_register_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User Name"
        android:paddingTop="20dp"
        android:paddingEnd="4dp" />

    <EditText
        android:id="@+id/layout_register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingEnd="4dp"
        android:hint="Password"/>

    <EditText
        android:id="@+id/layout_register_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:paddingTop="20dp"
        android:paddingEnd="4dp"
        android:paddingBottom="30dp" />

    <Button
        android:id="@+id/button_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:text="Register"
        android:onClick="onButtonClick"/>

</LinearLayout>